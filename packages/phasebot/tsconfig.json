{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "outDir": "dist",
    "moduleResolution": "bundler",
    "module": "esnext",
    "declaration": true,
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "extends": "@repo/tsconfig/base.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.cjs",
    "src/**/*.mjs",
    "test/**/*.ts",
    "test/**/*.js",
    "test/**/*.cjs",
    "test/**/*.mjs",
  ],
}