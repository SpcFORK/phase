{
  "private": true,
  "name": "phase-monorepo",
  "type": "module",
  "author": "@notcharliee",
  "license": "CC-BY-NC-4.0",
  "scripts": {
    "build:bot": "cd apps/bot && npx tsc",
    "start:bot": "cd apps/bot && env-cmd -f ../../.env node build/main.js",
    "dev:bot": "cd apps/bot && npx tsc --watch",
    "build:site": "cd apps/site && env-cmd -f ../../.env npx next build",
    "start:site": "cd apps/site && env-cmd -f ../../.env npx next start",
    "dev:site": "cd apps/site && env-cmd -f ../../.env npx next dev",
    "build:schemas": "cd packages/schemas && npx tsup",
    "dev:schemas": "cd packages/schemas && tsup npx --watch"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.7"
  },
  "packageManager": "pnpm@8.9.2"
}