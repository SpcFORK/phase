{
  "include": [ "./**/*.ts" ],
  "exclude": [ "node_modules" ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": ".build",
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "checkJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
  },
}